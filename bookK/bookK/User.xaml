<Page x:Class="bookK.User"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:bookK"
      mc:Ignorable="d" 
      d:DesignHeight="560" d:DesignWidth="900"
      Title="User">

    <Grid>
        <ListView x:Name="UserList" HorizontalAlignment="Left" Height="457" Margin="90,67,0,0" VerticalAlignment="Top" Width="290">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Username" DisplayMemberBinding="{Binding UserName}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Alle Brugerer" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Opret Ny Bruger" HorizontalAlignment="Left" Margin="661,67,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="Navn" HorizontalAlignment="Left" Margin="661,101,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtName" HorizontalAlignment="Left" Height="23" Margin="661,132,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="Opret Bruger" HorizontalAlignment="Left" Margin="706,179,0,0" VerticalAlignment="Top" Width="75" Click="CreateUser"/>
    </Grid>
</Page>
